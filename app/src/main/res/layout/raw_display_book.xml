<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materCard"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2sp"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/raw_picture"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

        <ImageView
            android:id="@+id/raw_btn_fav"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_empty_star"/>
        <LinearLayout
            android:layout_marginTop="105dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/raw_author"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginLeft="2dp"
            android:hint="Author"
            android:textStyle="bold"/>
            <TextView
                android:id="@+id/raw_title"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:hint="Title"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/raw_publishedYear"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Year"
                android:textStyle="italic"/>
        </LinearLayout>
        <TextView
            android:id="@+id/raw_description"
            android:layout_width="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:hint="fghghfghhghghghghhfhgfhfhhfhfhgh"
            android:textSize="10sp"/>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
